<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fafafa"
        android:gravity="fill_horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/archfriend"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#101010"
            android:textColorHint="#303030"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="serif" >

		</TextView>

        <TextView
            android:id="@+id/txtArchNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="10dp"
            android:maxLines="2048"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:text="@string/news_packages_distrowatch"
            android:textColor="#101010"
            android:textColorHint="#303030"
            android:textSize="14sp"
            android:typeface="sans" >

        </TextView>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/btnNews"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:onClick="btnNews_clicked"
                android:text="@string/news" >
</Button>

            <Spinner
                android:id="@+id/lstMaintainers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnNews" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
